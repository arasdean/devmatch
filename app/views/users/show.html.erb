<div class="container"> 
  <div class="row"> 
      <div class="col-md-3"> 
        <%= image_tag @user.profile.avatar, class: 'avatar-show-img'%> 
      </div>
      <div class="col-md-6"> 
       <h1> <%= @user.profile.first_name %> </h1> 
        <h3><%= @user.profile.job_title %> </h3> 
        
        <div class="well profile-block profile-description"> 
          <%= @user.profile.description %> 
        </div>
        <% if current_user.plan_id == 2 %>
          <div class="well profile-block profile-info">
            <%= @user.profile.phone_number %></br> 
            <%= @user.profile.contact_email %>
          </div>
        
            
        <% end %> 
        </br> 
        
        </div>
    </div>

</div>
